<Window x:Class="Список_книг.ListBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Список_книг"
        mc:Ignorable="d"
        Title="ListBooksWindow" Height="480" Width="640" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="0" Grid.Row="0">
            <Button x:Name="Button_Delete" HorizontalAlignment="Right" Padding="15 5 15 5" FontSize="25" FontWeight="Bold" Margin="5" Click="Button_Delete_Click">Delete</Button>
            <Button x:Name="Button_Edit" HorizontalAlignment="Right" Padding="15 5 15 5" FontSize="25" FontWeight="Bold" Margin="5" Click="Button_Edit_Click">Edit</Button>            
        </StackPanel>
        <ListBox x:Name="ListBoxBooks" Grid.Row ="1" Grid.Column="0"  Background="Beige" FontSize="25"/>
        
    </Grid>
    
</Window>
