<Window x:Class="Список_книг.SingeBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Список_книг"
        mc:Ignorable="d"
        Title="SingeBookWindow" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="8" Background="Aqua" FontSize="35">Название</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="8" Background="Aqua" FontSize="35">Афтарр</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="8" Background="Aqua" FontSize="35">Содержимое</TextBlock>
        <Button FontSize="35" Grid.Column="0" Grid.Row="4" Margin="8">Назад</Button>
        <Button FontSize="35" Grid.Column="1" Grid.Row="4" Margin="8">Вперед</Button>
    </Grid>
</Window>
